<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_margin="@dimen/Default_Padding_5x"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="center"
        android:background="@drawable/roundlist_line"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/wm_yellow"
        android:textSize="@dimen/LargeTextSize" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundlist_line" >

        <LinearLayout
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/white"
            android:gravity="center"
            android:minHeight="80dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dip"
                android:text="@string/app_name"
                android:textColor="@color/black_color"
                android:textSize="@dimen/BasicTextSize" />

            <LinearLayout
                android:id="@+id/dialog_extends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout style="@style/mh_auto_size" >

        <include layout="@layout/bu_alert_dailog_bar" />
    </FrameLayout>

</LinearLayout>