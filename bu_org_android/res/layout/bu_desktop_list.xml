<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wm_desktop_menu"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:background="@color/v2_menu_bg" >

    <LinearLayout
        android:id="@+id/left_header"
        style="@style/mh_auto_size"
        android:layout_alignParentTop="true"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/left_bottomer"
        style="@style/mh_auto_size"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />

    <ListView
        android:id="@+id/left_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/left_bottomer"
        android:layout_below="@+id/left_header"
        android:cacheColorHint="#00000000"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none" />

</RelativeLayout>