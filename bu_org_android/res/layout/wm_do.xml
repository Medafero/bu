<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/do_root"
    style="@style/mh_auto_size"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:paddingLeft="@dimen/Default_Padding_5x"
    android:paddingRight="@dimen/Default_Padding_5x" >

    <LinearLayout
        style="@style/auto_size"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/Default_Padding_2x" >

        <TextView
            android:id="@+id/menu_title"
            style="@style/mh_auto_size"
            android:gravity="center_vertical"
            android:minHeight="@dimen/bu_button_min_height"
            android:orientation="vertical"
            android:paddingLeft="@dimen/Default_Padding_2x"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/black_color"
            android:textSize="@dimen/LargeTextSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wm_yellow" />

        <LinearLayout
            android:id="@+id/menu_menus"
            style="@style/mh_auto_size"
            android:orientation="vertical" />
    </LinearLayout>

</RelativeLayout>