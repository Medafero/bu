<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    style="@style/mh_auto_size"
    android:background="@color/white"
    android:orientation="vertical" >

   <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/wm_yellow" />

    <LinearLayout
        android:id="@+id/menu_menus"
        style="@style/mh_auto_size"
        android:orientation="vertical" />

    <LinearLayout
        style="@style/mh_auto_size"
        android:weightSum="2.0" >

        <Button
            android:id="@+id/menu_cancel"
            style="@style/Bu_Menu_Button"
            android:layout_width="0dip"
            android:layout_weight="1.0"
            android:text="@string/prompt_cancel"
            android:textSize="@dimen/LargeTextSize" />

        <Button
            android:id="@+id/menu_confirm"
            style="@style/Bu_Menu_Button"
            android:layout_width="0dip"
            android:layout_weight="1.0"
            android:text="@string/prompt_confirm"
            android:textSize="@dimen/LargeTextSize" />
    </LinearLayout>

</LinearLayout>