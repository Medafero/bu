<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bu_setting_user_detail_name_rl"
    style="@style/bu_setting_line"
    android:background="@null"
    android:padding="3dip" >

    <ImageView
        android:id="@+id/icon"
        style="@style/auto_size"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:gravity="center_vertical"
        android:padding="@dimen/Default_Padding"
        android:src="@drawable/translate1x1" />

    <TextView
        android:id="@+id/label"
        style="@style/bu_setting_item_text"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon"
        android:gravity="center_vertical"
        android:minHeight="@dimen/bu_button_min_height_small"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/black_color"
        android:textSize="@dimen/BasicTextSize" />

    <ImageView
        android:id="@+id/arrow"
        style="@style/bu_setting_item_editable"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/dis"
        style="@style/bu_setting_text_blue"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/Default_Padding"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_toRightOf="@+id/label"
        android:gravity="left|center_vertical"
        android:hint="@string/app_name"
        android:textSize="@dimen/BasicTextSize" />

</RelativeLayout>